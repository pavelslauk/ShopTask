@model ShopTask.Models.Category[]

<input type="text" class="new-category-input" name="newCategoryName" placeholder="New Category" />

@for (int i = 0; i < Model.Length; ++i)
{
    <input type="hidden" name="[@i].Id" value="@Model[i].Id">
    <input class="category-input" name="[@i].Name" type="text" value="@Model[i].Name">
}
