@{
    ViewBag.Title = "Categories";
}

<div class="category-form">
    <div class="form-header">
        <p class="form-header-text">Categories</p>
    </div>
    <div class="category-form-body">
        @using (Ajax.BeginForm("UpdateCategories", new AjaxOptions { OnSuccess = "updateComplete" }))
        {
            <input type="submit" class="form-save-button" value="Save" />

            <div id="categories" class="category-table" data-categories-url="@Url.Action("CategoriesPartial", "Home")">
                @Html.Action("CategoriesPartial")
            </div>
        }
    </div>
</div>

<script src="~/Scripts/Categories/OnUpdateSuccess.js"></script>