@model ShopTask.Models.Product

@{
    ViewBag.Title = "EditProduct";
}

<div class="forms">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h3>Edit product</h3>
        <div>
            @Html.HiddenFor(model => model.Id)

            Title
            <br />
            @Html.EditorFor(model => model.Title)
            @Html.ValidationMessageFor(model => model.Title, "", new { style = "color:red;" })
            <br /><br />
            <label>Price</label>
            <br />
            @Html.EditorFor(model => model.Price)
            @Html.ValidationMessageFor(model => model.Price, "", new { style = "color:red;" })
            <br /><br />
            <label>Description</label>
            <br />
            @Html.TextAreaFor(model => model.Description, new { cols = "40", rows = "3" })
            <br /><br />
        </div>
        <input type="submit" value="Save" />
    }
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>