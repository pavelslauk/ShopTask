@model IEnumerable<ShopTask.Models.Product>

@if (Model.Count() != 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th class="col2">
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td class="col2">
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditProduct", new { productId = item.Id }) | <a href="#" onclick="deletefunc('@item.Id', '@item.Title')">Delete</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>No products</p>
}
<br />
@Html.ActionLink("Add new product", "CreateProduct")

<script src="~/Scripts/TablePartialView/Delete.js"></script>