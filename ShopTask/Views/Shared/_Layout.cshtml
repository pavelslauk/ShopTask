@using ShopTask.Models;
@using ShopTask.Resources;
@using System.Globalization;
@using ShopTask.Utils;
@helper AddActivePageClass(string action)
{
    if (action == ViewContext.RouteData.GetRequiredString("action"))
    {
        @("active-page-link")
    }
}

@{
    CategoryModel[] categories = ViewBag.Categories;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/index")

    <div class="navbar">
        <div class="navbar-body">
            <a href="@Url.Action("CreateProduct", "Products")" class="navbar-link @AddActivePageClass("CreateProduct")">@Res.CreateProductTitle</a>
            <div class="inventory-link">
                <a href="@Url.Action("Index", "Products")" class="navbar-link @AddActivePageClass("Products")">@Res.ProductsTitle</a>
                @if (categories.Any())
                {
                    <ul class="categories-filter">
                        @foreach (var category in categories)
                        {
                            <li class="category-filter-link"><a href="@Url.Action("Index", "Products", new { filterCategoryId = category.Id})">@category.Name</a></li>
                        }
                    </ul>
                }
            </div>
            <a href="@Url.Action("Index", "Categories")" class="navbar-link @AddActivePageClass("Categories")">@Res.CategoriesTitle</a>

            <select class="js-culture-select" data-change-culture-url="@Url.Action("ChangeCulture", "Base")">
                <option disabled selected>@Res.DefaultCultureSelect</option>
                @foreach (var culture in Locals.cultures)
                {
                    <option value="@culture">@CultureInfo.GetCultureInfo(culture).NativeName</option>
                }
            </select>

        </div>
    </div>

    <div>
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
