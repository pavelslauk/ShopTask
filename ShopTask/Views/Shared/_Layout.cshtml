@helper AddActivePageClass(string action)
{
    if(action == ViewContext.RouteData.GetRequiredString("action"))
    {
        @("active-page-link")
    }
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/Site.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/index")

    <div class="navbar">
        <div class="navbar-body">
            <a href="@Url.Action("CreateProduct", "Home")" class="navbar-link @AddActivePageClass("CreateProduct")">New product</a>
            <a href="@Url.Action("Index", "Home")" class="navbar-link @AddActivePageClass("Index")">Inventory</a>
            <a href="@Url.Action("Categories", "Home")" class="navbar-link @AddActivePageClass("Categories")">Category</a>
        </div>
    </div>

    <div>
        @RenderBody()
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>
